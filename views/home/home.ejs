        <style>
            /* ===== Base Styles ===== */
            body {
                font-family: "Poppins", Arial, sans-serif;
                background: #f8f8f8;
                margin: 0;
                padding: 0;
                overflow-x: hidden;
            }

            .search-section {
                width: 100%;
                min-height: 450px;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-wrap: wrap;
                padding: clamp(1rem, 3vw, 3rem);
                gap: 2rem;
            }

            /* ===== Image Section ===== */
            .search-section-img {
                flex: 1 1 400px;
                max-width: 800px;
                height: clamp(588px, 25vw, 250px);
                border-radius: 20px;
                overflow: hidden;
            }

            .search-section-img img {
                width: 100%;
                height: 100%;
                border-radius: 20px;
                object-fit: cover;
                object-position: center;
                transition: transform 0.5s ease;
            }

            .search-section-img:hover img {
                transform: scale(1.05);
            }

            /* ===== Form Section ===== */
            .form-boxaa {
                flex: 1 1 400px;
                max-width: 600px;
                height: 500px;
                background: linear-gradient(135deg, rgb(255, 126, 66), rgb(255, 98, 25));
                border-radius: 20px;
                color: #fff;
                padding: clamp(1rem, 3vw, 2rem);
                box-shadow: 0 0.5rem 2rem rgba(0, 0, 0, 0.25);
            }

            .form-boxaa h2 {
                font-size: clamp(1.2rem, 2.5vw, 1.8rem);
                line-height: 1.4;
                margin-bottom: 10px;
            }

            .search-form {
                display: flex;
                flex-direction: column;
                gap: 1rem;
                margin-top: 1rem;
            }

            .intro-text {
                text-align: center;
                color: #ffe8de;
                font-size: clamp(0.8rem, 1vw, 1rem);
                margin: 0;
            }

            .intro-text.sub {
                margin-top: -10px;
                color: #fff5f1;
            }

            .input-row {
                display: flex;
                gap: 1rem;
                flex-wrap: wrap;
                justify-content: center;
            }

            .form-control {
                flex: 1;
                min-width: 130px;
                padding: 0.7rem;
                border: none;
                border-radius: 8px;
                outline: none;
                font-size: clamp(0.85rem, 1vw, 1rem);
            }

            .btn-search {
                background: #fff;
                color: rgb(255, 98, 25);
                font-weight: 600;
                padding: 0.8rem 2rem;
                border-radius: 8px;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .btn-search:hover {
                background: #ffebdf;
                transform: scale(1.05);
            }

            /* ===== RESPONSIVENESS ===== */

            /* Tablet View */
            @media (max-width: 1024px) {
                .search-section {
                    flex-direction: column;
                    text-align: center;
                }

                .search-section-img,
                .form-boxaa {
                    max-width: 90%;
                    height: auto;
                }

                .input-row {
                    flex-direction: column;
                }

                .form-control {
                    width: 100%;
                }

                .btn-search {
                    width: 100%;
                }
            }

            /* Small Phones */
            @media (max-width: 600px) {
                .form-boxaa {
                    padding: 1.2rem;
                    opacity: 0.9;
                }

                .form-boxaa h2 {
                    font-size: 1.1rem;
                }

                .intro-text {
                    font-size: 0.8rem;
                }

                .input-row {
                    gap: 0.7rem;
                }

                .form-control {
                    font-size: 0.85rem;
                }
            }

            /* Ultra Small Devices */
            @media (max-width: 400px) {
                .form-boxaa {
                    padding: 1rem;
                }

                .form-boxaa h2 {
                    font-size: 1rem;
                }

                .btn-search {
                    padding: 0.6rem 1.2rem;
                }
            }
        </style>



